# ============================================================================
# Next.js Frontend Environment Variables (Local Development)
# Phase 4 Deployment Configuration
# ============================================================================
#
# Copy this file to .env.local and fill in your actual values
# .env.local is gitignored and will not be committed
#
# ============================================================================

# ----------------------------------------------------------------------------
# Authentication
# ----------------------------------------------------------------------------

# Generate a random secret: https://generate-secret.vercel.app/32
# or use: openssl rand -base64 32
AUTH_SECRET=your-random-secret-key-here

# Auth URL (local development)
AUTH_URL=http://localhost:3000/api/auth

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------

# PostgreSQL connection string (same as backend)
# Local: postgresql://postgres:postgres@localhost:5432/ai_research
# Neon (production): postgresql://user:pass@ep-xxx.neon.tech/research?sslmode=require
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/ai_research

# Database URL (legacy support)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_research

# ----------------------------------------------------------------------------
# Research API (Phase 3)
# ----------------------------------------------------------------------------

# FastAPI backend URL
# Local development: http://localhost:8000
# Production: https://your-backend.onrender.com
RESEARCH_API_URL=http://localhost:8000

# Public API URL (exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# Storage (Vercel)
# ----------------------------------------------------------------------------

# Blob storage for file uploads
# Instructions: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=your-blob-token-here

# ----------------------------------------------------------------------------
# AI Gateway (Vercel)
# ----------------------------------------------------------------------------

# AI Gateway API Key (required for non-Vercel deployments)
# For Vercel deployments, OIDC tokens are used automatically
# https://vercel.com/ai-gateway
AI_GATEWAY_API_KEY=your-ai-gateway-key-here

# ----------------------------------------------------------------------------
# Redis (Optional - for rate limiting)
# ----------------------------------------------------------------------------

# Redis connection string
# Instructions: https://vercel.com/docs/redis
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# AI SDK Configuration (Optional - if using frontend AI features)
# ----------------------------------------------------------------------------

# OpenAI API Key (for AI SDK features)
OPENAI_API_KEY=your-openai-key-here

# ----------------------------------------------------------------------------
# Development Settings
# ----------------------------------------------------------------------------

# Node environment
NODE_ENV=development

# Next.js URL
NEXTAUTH_URL=http://localhost:3000

# Enable debug logs
DEBUG=false
